{
  "dashboard": {
    "id": null,
    "title": "OMS System - Comprehensive Monitoring",
    "tags": ["oms", "apisix", "kafka", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"apisix\"}",
            "legendFormat": "APISIX Status"
          },
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus Status"
          },
          {
            "expr": "up{job=\"kafka\"}",
            "legendFormat": "Kafka Status"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "APISIX Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(apisix_http_requests_total[5m])",
            "legendFormat": "{{route}} - {{method}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "APISIX Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(apisix_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(apisix_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "APISIX Routes Traffic",
        "type": "table",
        "targets": [
          {
            "expr": "sum(rate(apisix_http_requests_total[5m])) by (route)",
            "legendFormat": "{{route}}",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "Value": "Requests/sec",
                "route": "Route"
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "title": "APISIX HTTP Status Codes",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(apisix_http_requests_total[5m])) by (code)",
            "legendFormat": "{{code}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Kafka Topics Message Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messagesinpersec[5m])",
            "legendFormat": "{{topic}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "yAxes": [
          {
            "label": "Messages/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Kafka Consumer Lag",
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_consumer_lag_sum",
            "legendFormat": "{{topic}} - {{consumer_group}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "yAxes": [
          {
            "label": "Lag (messages)",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "Recent APISIX Requests",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"apisix\"} |= \"request\"",
            "legendFormat": "APISIX Logs"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32}
      },
      {
        "id": 9,
        "title": "System Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total[5m]) * 100",
            "legendFormat": "{{name}} - CPU %"
          },
          {
            "expr": "container_memory_usage_bytes / container_spec_memory_limit_bytes * 100",
            "legendFormat": "{{name}} - Memory %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "yAxes": [
          {
            "label": "Usage %",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 10,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total[5m])",
            "legendFormat": "{{name}} - RX"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total[5m])",
            "legendFormat": "{{name}} - TX"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "yAxes": [
          {
            "label": "Bytes/sec",
            "min": 0
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1
  }
}
