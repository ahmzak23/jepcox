# OMS Database Configuration
# These values will be used by all consumer services and the OMS database

# Database Connection Settings
DB_HOST=oms-database
DB_PORT=5433
DB_NAME=oms_db
DB_USER=web
DB_PASSWORD=123456
DB_SSL_MODE=prefer

# OMS API Configuration
DATABASE_URL=postgresql://web:123456@oms-database:5432/oms_db

# Kafka Configuration (if needed)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Development/Production Environment
ENVIRONMENT=development

# Optional: Override these values for different environments
# DB_HOST=your-production-db-host
# DB_PORT=5432
# DB_NAME=oms_production
# DB_USER=your-db-user
# DB_PASSWORD=your-secure-password
# DB_SSL_MODE=require
