{
  "dashboard": {
    "title": "OMS Business Intelligence Dashboard",
    "tags": ["oms", "business-intelligence", "outage-management"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "ðŸš¨ Critical Outages",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(oms_active_outages{severity=\"CRITICAL\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 2,
        "title": "âš ï¸ High Severity",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 3, "y": 0},
        "targets": [
          {
            "expr": "sum(oms_active_outages{severity=\"HIGH\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "ðŸ“Š Total Today",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "oms_total_outages_today",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "âœ… Resolved Today",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 9, "y": 0},
        "targets": [
          {
            "expr": "oms_outages_resolved_today",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "âš¡ Health Score",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 3, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "oms_system_health_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "ðŸ‘¥ Customers Affected",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 15, "y": 0},
        "targets": [
          {
            "expr": "sum(oms_customers_affected)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "title": "ðŸ“ˆ Outage Trends (24h)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(oms_total_outages_today[5m])",
            "legendFormat": "Outages Created",
            "refId": "A"
          },
          {
            "expr": "rate(oms_outages_resolved_today[5m])",
            "legendFormat": "Outages Resolved",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Outages per 5min",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "ðŸ¢ Top Affected Locations",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "topk(8, oms_location_outage_count)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "displayMode": "gradient",
              "orientation": "horizontal"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "title": "ðŸ”§ Outage Causes Breakdown",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum by (cause) (oms_outage_causes_total)",
            "refId": "A"
          }
        ],
        "options": {
          "displayLabels": ["name", "value"],
          "legend": {
            "displayMode": "table",
            "placement": "right"
          }
        }
      },
      {
        "id": 10,
        "title": "â±ï¸ Performance Metrics",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "targets": [
          {
            "expr": "oms_mttr_minutes",
            "legendFormat": "MTTR (minutes)",
            "refId": "A"
          },
          {
            "expr": "oms_mtbf_hours",
            "legendFormat": "MTBF (hours)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Time",
            "min": 0
          }
        ]
      },
      {
        "id": 11,
        "title": "ðŸ“Š SLA Compliance",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "targets": [
          {
            "expr": "oms_sla_compliance_percent",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "ðŸ”„ Message Processing Rate",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "oms_message_processing_rate",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Messages/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 13,
        "title": "âš¡ API Performance",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(oms_api_response_time_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(oms_api_response_time_seconds_bucket[5m]))",
            "legendFormat": "50th Percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0
          }
        ]
      },
      {
        "id": 14,
        "title": "ðŸ¤– Automation & Escalation",
        "type": "graph",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 26},
        "targets": [
          {
            "expr": "oms_automation_rate_percent",
            "legendFormat": "Automation Rate",
            "refId": "A"
          },
          {
            "expr": "oms_escalation_rate_percent",
            "legendFormat": "Escalation Rate",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 15,
        "title": "ðŸš¨ Alert Fatigue",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 26},
        "targets": [
          {
            "expr": "oms_alert_fatigue_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 16,
        "title": "ðŸ“‹ Latest Critical Outages",
        "type": "table",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 26},
        "targets": [
          {
            "expr": "oms_latest_outages",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "filterable": true
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "severity",
          "type": "query",
          "query": "label_values(oms_active_outages, severity)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "location",
          "type": "query",
          "query": "label_values(oms_active_outages, location)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Critical Outages",
          "datasource": "Prometheus",
          "expr": "oms_active_outages{severity=\"CRITICAL\"} > 0",
          "iconColor": "red",
          "enable": true
        }
      ]
    }
  }
}

